---
import MirrorAnimation from "./MirrorAnimation.jsx";
---

<div class="item mirror">
  <h2>50%</h2>
  <p>Af alle 15-årige piger føler, at de er for tykke.</p>
  <div style="width: 100%;" class="container">
    <MirrorAnimation client:load="react" />
  </div>
</div>



<style>
  *{
    margin: 0;
    padding: 0;
  }
  h2 {
    color: blue;
    font-family: "obviously", sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 4rem;
  }
  p {
    color: blue;
    font-family: "archivo-variable", sans-serif;
    font-variation-settings: "wdth" 100, "wght" 600;
    font-style:'SemiBold' ;
    font-size: 1.5rem;
  }

  .item {
    display: grid;
    grid-column: 1fr;
    text-align: center;
    justify-content: center;
    row-gap: 5vw;
    background: #f7c7d9;
    padding-top: 15em;
  }
  .container{
    display: flex;
    place-self: center;
  }
  
</style>
