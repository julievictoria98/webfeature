---
import PercentageSlider from "../components/PercentageSlider.astro";
import Chat from "../components/Chat.astro";
import Stars from "../Components/Stars.astro";
import Sparkling from "../Components/Sparkling.astro";
import Umbrella from "../Components/Umbrella.astro";
import Mirror from "../Components/Mirror.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Chat
      src={"/mirrorGirl.webp"}
      text={"Jeg får det dårligt af at kigge på Instagram Når jeg står og ser mig selv i spejlet føler jeg min krop er forkert. Min mave er for tyk, mine bryster er for små, mine ben er for korte... "}
    />
    <Chat
      src={"/sittingGirl.webp"}
      text={"Jeg har faktisk nogle gode veninder, men jeg føler mig stadig rigtig ensom. Jeg har tre gode veninder. Jeg savner virkelig noget fællesskab og sammenhold i en lidt større vennekreds. Så i bund og grund er jeg rigtig tit alene. Det gør mig rigtig ked af det."}
    />
    <Chat
      src={"phoneGirl.webp"}
      text={"Mine veninder er begyndt at drikke alkohol og holde fester. Jeg føler mig presset og er bange for at blive holdt udenfor, hvis jeg ikke gør det også"}
    />
    <div class="question_container">
      <PercentageSlider
        graphText="HVOR MANGE LGTBQ+ ELEVER TROR DU FØLER, AT DE IKKE KAN VÆRE SIG SELV?"
        classColor="bluecolor"
      >
        <Umbrella />
      </PercentageSlider>

      <br />
      <PercentageSlider
        graphText="HVOR MANGE 15 ÅRIGE PIGER, TROR DU, FØLER SIG FOR TYKKE?"
        classColor="redcolor"
      >
        <Stars />
      </PercentageSlider>

      <br />
      <PercentageSlider
        graphText="HVOR MANGE PIGER I 9.KLASSE, TROR DU HAR LAVT SELVÆRD?"
        classColor="bluecolor"
      >
        <Sparkling />
      </PercentageSlider>

      <PercentageSlider
        graphText="HVOR MANGE 15 ÅRIGE PIGER, TROR DU, FØLER SIG FOR TYKKE?"
        classColor="bluecolor"
      >
        <Mirror />
      </PercentageSlider>
    </div>
  </body>
</html>

<style>
  body {
    background-color: #fff5eb;
    background-image: url("../../public/Imgs/FloralVines.png");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .question_container {
    background-color: #f7c7d9;
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 20px;
  }
</style>
